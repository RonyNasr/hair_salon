
<h2>Add a client for <%= @stylist.name() %></h2>



<form action="/stylist/<%= @stylist.id() %>/clients/new" method="post">
  <input type="hidden" name="id" value="<%= @stylist.id() %>">
  <label for="name"></label>
  <input type="text" name="name" placeholder="Client Name" required>
  <button type="submit" class="btn btn-primary btn-sm">Add Client</button>
</form>

<div class="btn-row">
  <a class="btn btn-default" href="/stylists/<%= @stylist.id() %>">Back</a>
</div>
